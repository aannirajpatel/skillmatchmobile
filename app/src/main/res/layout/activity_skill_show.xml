<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smback"
    tools:context="com.aanpatel.skillmatch3.SkillShowActivity">

    <LinearLayout
        android:id="@+id/userLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="&lt;"
            android:onClick="backClick"/>

        <TextView
            android:id="@+id/personTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Skill Profile: User"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/sendReqBtn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:onClick="contactClick"
            android:text="SHOW CONTACT" />
    </LinearLayout>

    <ListView
        android:id="@+id/skillNameList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userLayout"
        android:layout_marginTop="10dp"
        android:divider="@android:color/transparent" />

</RelativeLayout>
